    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via ts-node",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "node",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/index.ts"
            ],
            "console": "integratedTerminal"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\dist\\index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Mocha Tests",
            "type": "pwa-node",
            "request": "launch",
            // "preLaunchTask": "npm run build",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "-u", 
                "bdd",
                // "tdd",
                "--timeout",
                "2000",
                "--colors",
                "${workspaceFolder}/dist/test/**/*.spec.js"
            ],
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
